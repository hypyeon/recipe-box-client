@{
  ViewData["Title"] = "Create Recipe";
}

@model RecipeBoxClient.Models.Recipe

<h4>Create New Recipe</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Title, "Title: ")
  @Html.TextBoxFor(model => model.Title)
  <br />
  @Html.LabelFor(model => model.Instruction, "Instructions: ")
  @Html.TextBoxFor(model => model.Instruction)
  <br />
  <input type="submit" value="Add" class="btn btn-primary"/>
}

<br />
<p>@Html.ActionLink("Back to Recipe List", "Index")</p>